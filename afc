<script>
  const cards = document.querySelectorAll(".director-card");
  const quoteText = document.getElementById("quote-text");
  const quoteAuthor = document.getElementById("quote-author");

  let current = 0;
  let interval;

  function showQuote(index) {
    const card = cards[index];
    quoteText.textContent = "“" + card.getAttribute("data-quote") + "”";
    quoteAuthor.textContent = "— " + card.getAttribute("data-author");
    cards.forEach(c => c.classList.remove("ring-2", "ring-blue-400"));
    card.classList.add("ring-2", "ring-blue-400");
    current = index;
  }

  // Auto rotate quotes
  function startRotation() {
    interval = setInterval(() => {
      current = (current + 1) % cards.length;
      showQuote(current);
    }, 4000);
  }

  // Click to select a director
  cards.forEach((card, i) => {
    card.addEventListener("click", () => {
      clearInterval(interval);
      showQuote(i);
      startRotation();
    });
  });

  // Start
  showQuote(0);
  startRotation();
</script>


